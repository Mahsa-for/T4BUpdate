FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# npm bug workaround: ensure latest npm and clean install
RUN npm install -g npm@latest && rm -rf node_modules package-lock.json && npm install

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Run development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]