digraph G {
    

    subgraph cluster_Elementary_1d {
    
    //System design
    label = "1d" color="black" fillcolor="#c9c5c5" style="filled, dotted"
    
    
    {   
        //define elements
        
        Symbol [ id= "Symbol" ,color= red ,fillcolor= white ,style=filled ,shape=box ,class = "instance"]
        
        Transformation [ id= "Transformation" ,color=coral fillcolor=white style=filled shape=Mrecord]
        
        Data [ id= "Data" ,color= green ,fillcolor= white ,style=filled ,shape=box ,class = "instance"]
        }
        
    }
    
    //design pattern
    rankdir="LR" Symbol-> Transformation-> Data
   
}
